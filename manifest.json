{
  "manifest_version": 2,
  "name": "Flatbook",
  "version": "0.1",

  "description": "A flat design for Facebook",

  "author": "Dan Bovey & Dafz Thomas",
  "content_scripts": [ {
    "css": [ "flatbook.css" ],
    "js": [ "jquery-2.1.3.min.js", "flatbook.js" ],
    "matches": [ "http://*.facebook.com/*", "https://*.facebook.com/*"]
  }],
  "permissions": ["tabs"],
  "short_name": "Flatbook",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}